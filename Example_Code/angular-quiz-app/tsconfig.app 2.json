{
	"compileOnSave": false,
	"compilerOptions": {
    "baseUrl": ".",
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"module": "system",
		"noImplicitAny": true,
		"removeComments": true,
		"suppressImplicitAnyIndexErrors": true,
		"sourceMap": false,
		"target": "es5",
		"lib": [
			"es2015",
			"dom"
		],
		"typeRoots": [
			"node_modules/@types",
			"src/types"
		],
    "paths": {
      "app/*": [
        "src/js/*",
        "src/js/*/index"
      ]
    }
	},
	"exclude": [
		"node_modules",
		"jspm_packages",
		"typings",
		"server",
		"dist"
	]
}
